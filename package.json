{
  "name": "twitchwatcher",
  "version": "1.0.0",
  "description": "A service that watches twitch webhooks of influencers on Collate",
  "main": "./dist/server.js",
  "scripts": {
    "start": "npm run build && node dist/Server.js 8080",
    "build": "tsc ./src/Server.ts --outDir ./dist",
    "test": "npm run build && mocha -r ts-node/register tests/**/*.spec.ts",
    "docker-build": "docker build -t collate/twitch-watcher .",
    "docker-run": "npm run docker-build && docker run -d -p 8000:8080 -v ${pwd}:/app collate/twitch-watcher",
    "webhook-local": "ngrok http 8080",
    "webhook-docker": "ngrok http 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collatedev/twitch-watcher.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "author": "Evan Coulson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/collatedev/twitch-watcher/issues"
  },
  "homepage": "https://github.com/collatedev/twitch-watcher#readme",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^10.12.23",
    "@types/sinon-chai": "^3.2.2",
    "@types/sinon-express-mock": "^1.3.7",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "nodemon": "^1.18.9",
    "sinon-chai": "^3.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "sinon": "^7.2.3",
    "sinon-express-mock": "^2.1.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  }
}
