{
  "name": "twitchwatcher",
  "version": "1.0.0",
  "description": "A service that watches twitch webhooks of influencers on Collate",
  "main": "./dist/server.js",
  "scripts": {
    "start": "npm run build && node dist/Server.js 8080",
    "build": "rm -rf ./dist && tsc ./src/Server.ts --outDir ./dist",
    "test": "NODE_ENV=test mocha -r ts-node/register tests/**/*.spec.ts && rm ./logs/testing.log",
    "coverage": "NODE_ENV=test nyc mocha -r ts-node/register tests/**/*.spec.ts && open coverage/index.html && rm ./logs/testing.log",
    "test-verbose": "mocha -r ts-node/register tests/**/*.spec.ts && rm ./logs/testing.log",
    "docker-build": "docker build -t collate/twitch-watcher .",
    "docker-run": "npm run docker-build && docker run -d -p 8000:8080 -v ${pwd}:/app collate/twitch-watcher",
    "webhook-local": "ngrok http 8080",
    "webhook-docker": "ngrok http 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collatedev/twitch-watcher.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "author": "Evan Coulson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/collatedev/twitch-watcher/issues"
  },
  "homepage": "https://github.com/collatedev/twitch-watcher#readme",
  "dependencies": {
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "^4.1.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.23",
    "@types/node-fetch": "^2.1.6",
    "@types/sinon-chai": "^3.2.2",
    "@types/sinon-express-mock": "^1.3.7",
    "@types/winston": "^2.4.4",
    "body-parser": "^1.18.3",
    "chai-as-promised": "^7.1.1",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.9",
    "sinon-chai": "^3.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "sinon": "^7.2.3",
    "sinon-express-mock": "^2.1.0",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "coverage"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
