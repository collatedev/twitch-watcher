{
  "name": "@collate/twitchwatcher",
  "version": "1.0.0",
  "description": "A service that watches twitch webhooks of influencers on Collate",
  "main": "./lib/index.js",
  "scripts": {
    "test": "jest",
    "build": "npm run lint && tsc -p ./tsconfig.prod.json",
    "lint": "tslint src/**/*.ts && tslint tests/**/*.ts",
    "ngrok": "ngrok http 8080",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collatedev/twitch-watcher.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "author": "Evan Coulson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/collatedev/twitch-watcher/issues"
  },
  "homepage": "https://github.com/collatedev/twitch-watcher#readme",
  "dependencies": {
    "@collate/logging": "^1.0.5",
    "@collate/request-validator": "^1.0.8",
    "@collate/router": "^1.0.4",
    "@types/debug": "^4.1.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/logform": "^1.2.0",
    "@types/morgan": "^1.7.36",
    "@types/node": "^10.14.13",
    "@types/node-fetch": "^2.1.6",
    "body-parser": "^1.18.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "logform": "^2.1.2",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^1.18.9",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "ngrok": "^3.1.1",
    "source-map-support": "^0.5.10",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-whitespace-before-colon": "^0.2.0",
    "typescript": "^3.3.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "coverage",
      "tests"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
